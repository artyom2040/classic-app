# ===========================================
# Context Composer Environment Configuration
# ===========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ===========================================
# Environment
# ===========================================
# NODE_ENV=development|staging|production

# ===========================================
# Supabase Configuration
# ===========================================
# Your Supabase project URL
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anon public key
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-public-key-here

# Optional: Service role key (for server-side operations only)
EXPO_PUBLIC_SUPABASE_SERVICE_KEY=your-service-role-key-here

# ===========================================
# API Configuration
# ===========================================
# Your API endpoint (if using a custom backend)
EXPO_PUBLIC_API_URL=https://api.artyom2040.com

# ===========================================
# Feature Flags
# ===========================================
# Enable analytics (true/false)
EXPO_PUBLIC_ENABLE_ANALYTICS=false

# Enable error tracking (true/false)
EXPO_PUBLIC_ENABLE_ERROR_TRACKING=false

# Enable remote configuration (true/false)
EXPO_PUBLIC_ENABLE_REMOTE_CONFIG=false

# ===========================================
# Development & Debug
# ===========================================
# Enable debug logging (true/false)
EXPO_PUBLIC_ENABLE_DEBUG_LOGGING=true

# Enable performance monitoring (true/false)
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Enable network logging (true/false)
EXPO_PUBLIC_ENABLE_NETWORK_LOGGING=true

# ===========================================
# Authentication
# ===========================================
# Redirect URL for OAuth flows
EXPO_PUBLIC_AUTH_REDIRECT_URL=https://yourapp.com/auth-callback

# ===========================================
# Deployment Notes
# ===========================================
# For VPS deployment (api.artyom2040.com):
# 1. Set EXPO_PUBLIC_SUPABASE_URL to your Supabase project URL
# 2. Set EXPO_PUBLIC_SUPABASE_ANON_KEY to your anon key
# 3. Set NODE_ENV=production
# 4. Set EXPO_PUBLIC_API_URL=https://api.artyom2040.com
# 5. Set debug flags to false for production

# For local development:
# 1. Set NODE_ENV=development
# 2. Use your local Supabase credentials
# 3. Keep debug flags enabled for development

# For staging:
# 1. Set NODE_ENV=staging
# 2. Use staging Supabase project
# 3. Set EXPO_PUBLIC_API_URL to staging endpoint
# 4. Enable analytics and error tracking for testing
